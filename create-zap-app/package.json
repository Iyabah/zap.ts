{
  "name": "create-zap-app",
  "description": "A CLI to bootstrap a Next.js boilerplate with plugins customization.",
  "author": "Alexandre Trotel",
  "keywords": [
    "next.js",
    "cli",
    "typescript",
    "plugins",
    "oRPC",
    "react",
    "tailwindcss",
    "drizzle",
    "bun"
  ],
  "version": "1.1.14",
  "module": "index.ts",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://zap-ts.alexandretrotel.org",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexandretrotel/zap.ts/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/alexandretrotel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexandretrotel/zap.ts"
  },
  "bin": {
    "create-zap-app": "./dist/index.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "ts-morph": "^25.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "files": [
    "dist/**/*",
    "plugins/**/*.ts",
    "plugins/**/*.tsx",
    "plugins/**/*.js",
    "plugins/**/*.md",
    "core/public/**/*",
    "core/src/**/*",
    "core/*.ts",
    "core/*.tsx",
    "core/*.js",
    "core/*.md",
    "core/*.json",
    "core/*.mjs",
    "core/*.cjs",
    "core/*.mdx",
    "core/.prettierrc",
    "core/.gitignore",
    "core/LICENSE",
    "README.md"
  ]
}
