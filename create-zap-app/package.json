{
  "name": "create-zap-app",
  "description": "A CLI to bootstrap a modular Next.js project with plugins.",
  "version": "1.0.12",
  "module": "index.ts",
  "type": "module",
  "private": false,
  "bin": {
    "create-zap-app": "./dist/index.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "start": "node dist/index.js",
    "distribute": "pnpm run build && pnpm publish"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "ts-morph": "^25.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "files": [
    "dist/**/*",
    "./plugins/**",
    "./core/**/*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
